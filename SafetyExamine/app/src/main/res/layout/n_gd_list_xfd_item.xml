<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="1"
              android:id="@+id/n_gd_list_xfd_item">

    <LinearLayout
        android:id="@+id/ll_lll"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:minHeight="90dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_theme1_gd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:text=" 中兴动环 "
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:ignore="RtlCompat"/>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/tv_theme1_gd"
                android:layout_marginEnd="17dp"
                android:text="发电状态"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dp"/>

            <TextView

                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="25dp"
                android:text="GZ20160121-176"
                android:textColor="@color/color_AMB_gray"
                android:textSize="30px"
                tools:ignore="RtlCompat"/>

            <!--<ImageView-->
                <!--android:id="@+id/tv_sign"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_alignLeft="@+id/tv_theme1_gd"-->

                <!--android:layout_below="@+id/tv_theme1_gd"-->
                <!--android:background="@drawable/wjgd"-->

                <!--/>-->
            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_theme1_gd"
                android:text="计划发电"
                android:layout_alignTop="@+id/tv_number"
                android:layout_below="@+id/tv_theme1_gd"


                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_hidden"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="#ff0000"
        android:gravity="center"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>