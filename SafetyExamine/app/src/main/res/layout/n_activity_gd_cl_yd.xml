<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffe8ce"
    android:orientation="vertical" >

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:src="@drawable/png_type_5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="原因分类"
                    android:textColor="#8b0000"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_teleAlarmreaanalysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:hint="请[选择]原因分类"
                android:minHeight="50dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" >
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:src="@drawable/png_type_5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="原因细分"
                    android:textColor="#8b0000"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_teleSubAlarmreaanalysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:hint="请[选择]原因细分"
                android:minHeight="50dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" >
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:src="@drawable/png_type_5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="故障原因"
                    android:textColor="#8b0000"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_alarmreaanalysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:hint="请[选择]故障原因"
                android:minHeight="50dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" >
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:src="@drawable/png_type_5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="处理措施"
                    android:textColor="#8b0000"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_resprocess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:hint="请[选择]处理措施"
                android:minHeight="50dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" >
            </EditText>

            <LinearLayout
                android:id="@+id/ll_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >
                
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:src="@drawable/png_type_5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="手工填写内容"
                    android:textColor="#8b0000"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:hint="请[输入]手工填写内容"
                android:minHeight="50dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" >
            </EditText>
            </LinearLayout>

            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:src="@drawable/png_type_5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="手工记录故障恢复时间"
                    android:textColor="#8b0000"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_faultrectime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:hint="请[选择]手工记录故障恢复时间"
                android:minHeight="50dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" >
            </EditText>

            <Button
                android:id="@+id/yd_cl_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffe8ce"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:visibility="gone"
                android:text="点击上传图片 (未收到移动故障恢复时间,如需处理工单,请上传故障已恢复证明图片后再处理工单)"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>